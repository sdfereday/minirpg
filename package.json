{
  "name": "parcel-sandbox",
  "version": "1.0.0",
  "description": "Simple Parcel Sandbox",
  "main": "src/index.js",
  "scripts": {
    "start": "parcel index.html -d build/ --open",
    "build": "parcel build index.html -d build/"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "assets",
        "staticOutDir": "assets"
      }
    ],
    "watcherGlob": "**"
  },
  "dependencies": {
    "kontra": "7.1.2",
    "mithril": "2.0.4",
    "trim-right": "1.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.2.0",
    "parcel-bundler": "^1.6.1",
    "parcel-plugin-static-files-copy": "^2.5.0"
  }
}
